  <form class="form-inline my-2 my-lg-0" action="/search" method="POST">
                <input class="form-control mr-sm-2"  name="search" type="search" placeholder="Search" style="width: 300px;"
                    aria-label="Search">
                <button class="btn btn-outline-light my-2 my-sm-0" id="searchbutton" type="submit" style="border-color: rgb(180, 180, 180); color:rgb(161, 161, 161);">Search</button>
