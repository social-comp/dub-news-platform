    <div class="news-container ">
        <div class="news ">
            <% j=0 %>
            <% for(var i=0; i<4; i++) {%>
              
                <% if ((typeof articles[j].url=='object') || (typeof articles[j].title=='object') || (typeof articles[j].urlToImage=='object') || (typeof articles[j].content=='object')){ %>
                    <% j=j+1; %>

                    <% if(i!=0){ %>

                        <% i=i-1; %>
                    <% }; %>
                <% } else { %>
                    <a href="/article" target="_blank" class="news-box Hover-effect">
                        <div class="card" style="width:18rem;">
                            <img class="card-img-top" src="<%- articles[j].urlToImage %>" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title" style="padding-bottom:none">      <%- articles[j].title %></h5> 
                                <p><span style="font-size:smaller;color:rgb(167, 167, 167);" ><%- new Date(articles[j].publishedAt.slice(0,10)).toDateString() %>,  <%- moment.utc(articles[j].publishedAt).local().format('hh:mm A') %> </span></p> 
                                <p class="card-text"> <%- articles[j].content.replace(/<[^>]+>/g, "...") %></p> 
                                <% j=j+1; %>
                            </div>
                        </div>
                    </a>
                       
                   
                       
                <% } %>
            <% } %>
        </div>   

        <div style="padding-left: 2%;padding-right:2%">
            
            <h3 >other news</h3>
            <br/>

            <div class="othernews " style="padding-left: 3%;padding-right:3%">
                <% for(var i=j; i<j+5; i++) {%>
                    <% if ((typeof articles[i].url=='object') || (typeof articles[i].title=='object') || (typeof articles[i].urlToImage=='object') || (typeof articles[i].content=='object')){ %>
                    <% } else { %>
                        <a href="<%- articles[i].url %>" target="_blank" class="othernews-box Hover-effect">
            
                            <div class="card" style="width: 15rem;display: inline-flex;">
                                <img class="card-img-top" src="<%- articles[i].urlToImage %>" alt="Card image cap">
                                <div class="card-body">
                                    <h5 class="card-title" style="padding-bottom:none;font-size:smaller;">      <%- articles[i].title %></h5> 
                            
                    
                                </div> 
                            </div>
                        
                        
                    
                        </a>
                      
                    
                    <% } %> 
                <% } %>
            </div> 
        </div> 
                   
                
    </div>
